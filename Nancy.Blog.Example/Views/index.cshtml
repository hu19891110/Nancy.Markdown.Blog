@using System.Linq
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Nancy.Blog.Example</title>
  <link href="~/Content/css/pure-min.css" rel="stylesheet" />
  <link href="~/Content/css/blog.css" rel="stylesheet" />
</head>
<body>
  <div>
    <h1>@Model.Blog.Title</h1>

    <section>
      @foreach (var post in Enumerable.Take(Enumerable.Skip(Model.Blog.Posts, 0), 4))
      {
        <article>
          <h2>@post.Title</h2>
          <div>
            @Html.Raw(post.Html())
          </div>
        </article>
      }
    </section>
  </div>
</body>
</html>
